                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          Margin="20 0 0 0"
                                          HorizontalScrollBarVisibility="Hidden" 
                                          VerticalScrollBarVisibility="Hidden"/>

                            <ContentPresenter></ContentPresenter>

                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>