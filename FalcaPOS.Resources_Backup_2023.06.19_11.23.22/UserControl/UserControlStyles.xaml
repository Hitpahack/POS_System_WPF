    <Style TargetType="TextBox" x:Key="RoundTextBoxSearhProduct">
        <Setter Property="Padding" Value="7"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="FontSize" Value="15px"/>
